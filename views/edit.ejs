<% include ./partials/header%>
<div class="ui main text container segment">
    <h1 class="ui huge header">Edit <%= post.title%></h1>
    <form class="ui form" action="/blogs/<%= post._id%>?_method=PUT" method="POST">
            <div class="field">
              <label>Title</label>
              <input type="text" name="blog[title]" placeholder="Title" value="<%= post.title%>">
            </div>
            <div class="field">
              <label>Image URL</label>
              <input type="text" name="blog[image]" placeholder="Image URL" value="<%= post.image%>">
            </div>
            <div class="field">
              <label>Blog Content</label>
              <textarea name="blog[body]" placeholder="Your content goes here.."><%= post.body%></textarea>
            </div>
            <button class="ui button" type="submit">Update</button>
    </form>
</div>
<% include ./partials/footer%>