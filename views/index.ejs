<% include ./partials/header%>
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
    <div class="ui divided items">
        <%for(var i=0; i<posts.length; i++){%>
            <div class="item ">
                <div class="image">
                    <img src="<%=posts[i].image%>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= posts[i]._id%>"><%=posts[i].title %></a>
                    <div class="meta">
                            <span> <%= posts[i].created.toDateString() %> </span>
                    </div>
                    <div class="description">
                            <p><%=posts[i].body.substring(0,100)%>...</p>
                    </div>
                    <div class="extras">
                            <a class="ui floated basic violet button" href="/blogs/<%=posts[i]._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                    </div>
                </div>     
            </div>  
            <%}%>   
        </div>
    </div>
</div>

<% include ./partials/footer%>